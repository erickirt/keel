model Address {
    fields {
        addressLine1 Text
        town Text
    }
}

model Customer {
    fields {
        name Text
        dateOfBirth Date
        address Address
        details Markdown
        weight Decimal
        picture File
        occupation Occupation
    }

    actions {
        get getCustomer(id)
        create createCustomer() with (
            name,
            dateOfBirth,
            address.addressLine1,
            address.town,
            details,
            weight,
            picture,
            occupation
        )
        update updateCustomer(id) with (name?, dateOfBirth?, details?, weight?, picture?)
        list customers(name?)
    }
}

enum Occupation {
    Teacher
    Doctor
    FIRE_FIGHTER
    astronaut
    Officer_1
} 

api Web {
    models {
        Customer
    }
}